# Maintainer: Danct12 <danct12@disroot.org>
# Contributor: Dan Johansen <strit@manjaro.org>

pkgname=tokodon
pkgver=22.11
pkgrel=1
pkgdesc="Mastodon client for Plasma and Plasma Mobile"
arch=('x86_64' 'aarch64')
url="https://www.plasma-mobile.org/"
license=('GPL2')
depends=('qt5-base' 'qt5-quickcontrols2' 'qt5-multimedia' 'qt5-svg' 'qt5-websockets' 'qtkeychain-qt5'
         'kirigami2' 'ki18n' 'knotifications' 'kconfig' 'kcoreaddons' 'kdbusaddons' 'kitemmodels'
         'qqc2-desktop-style' 'kirigami-addons')
makedepends=('cmake' 'extra-cmake-modules')
source=("http://download.kde.org/stable/plasma-mobile/$pkgver/$pkgname-$pkgver.tar.xz")
md5sums=('4c1ec2dfd0fa5bda67ac4b4f30a45898')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF \
    -DLIB_INSTALL_DIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
