+static gboolean
+parse_netmask (const char *str,
+               guint      *prefix,
+               gint        version)
+{
+  struct in_addr tmp_addr;
+  glong tmp_prefix;
+  gint max_limit;
+
+  if (version == AF_INET)
+    max_limit = 32;
+  else
+    max_limit = 128;
+
+  errno = 0;
+
+  /* Is it a prefix? */
+  if (!strchr (str, '.')) {
+    tmp_prefix = strtol (str, NULL, 10);
+    if (!errno && tmp_prefix >= 0 && tmp_prefix <= max_limit) {
+      if (prefix)
+        *prefix = tmp_prefix;
+      return TRUE;
+    }
+  }
+
+  if (version != AF_INET)
+    return FALSE;
+
+  /* Is it a netmask? */
+  if (inet_pton (AF_INET, str, &tmp_addr) > 0) {
+    if (prefix)
+      *prefix = nm_utils_ip4_netmask_to_prefix (tmp_addr.s_addr);
+    return TRUE;
+  }
+
+  return FALSE;
