+static gboolean
+security_has_proto (NMSettingWirelessSecurity *sec, const char *item)
+{
+  g_assert (sec);
+  g_assert (item);
+
+  for (guint32 i = 0; i < nm_setting_wireless_security_get_num_protos (sec); i++)
+    if (!strcmp (item, nm_setting_wireless_security_get_proto (sec, i)))
+      return TRUE;
+
+  return FALSE;
+}
