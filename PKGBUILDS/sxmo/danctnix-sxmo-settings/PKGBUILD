pkgver() {
    date +%Y%m%d
}

package() {
    install -Dm755 -t "$pkgdir/etc/profile.d/" sxmo-qt-mobile-controls.sh
    install -Dm644 -t "$pkgdir/etc/sway/config.d/" sway-pinephone-keyboard.conf
}
