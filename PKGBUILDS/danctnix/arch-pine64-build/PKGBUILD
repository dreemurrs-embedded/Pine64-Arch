# Maintainer: James Rose <james.rose1103@outlook.com>
pkgname=danctnix-arch-build
pkgver=1.0.0
pkgrel=1
pkgdesc="A package to install arch-pine64-build into /opt"
arch=('any')
url="https://github.com/dreemurrs-embedded/arch-pine64-build"
license=('GPL')
depends=('devtools' 'base-devel' 'lsof' 'libarchive' 'dosfstools' 'util-linux' 'wget' 'arch-install-scripts' 'qemu-user-static' 'qemu-user-static-binfmt' 'e2fsprogs')
makedepends=('git')
source=("git+https://github.com/dreemurrs-embedded/arch-pine64-build.git")
sha256sums=('SKIP')

build() {
    cd "$srcdir/arch-pine64-build"
    mv build.sh danct-build
    chmod +x danct-build
}

package() {
    cd "$srcdir/arch-pine64-build"
    install -Dm755 danct-build "$pkgdir/usr/bin/danct-build"
    install -d "$pkgdir/opt/$pkgname"
    cp -r ./* "$pkgdir/opt/$pkgname/"
}